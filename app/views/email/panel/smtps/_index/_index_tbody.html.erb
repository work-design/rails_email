<td><%= model.name %></td>
<td><%= model.address %></td>
<td><%= model.port %></td>
<td><%= model.authentication %></td>
<td>
  <p>
    <%= form_with theme: 'switch', model: model, url: { action: 'update', id: model.id }, data: { controller: 'input' } do |f| %>
      <%= f.check_box :ssl, data: { action: 'input#submit' }, id: nil %>
    <% end %>
  </p>
  <p>
    <%= form_with theme: 'switch', model: model, url: { action: 'update', id: model.id }, data: { controller: 'input' } do |f| %>
      <%= f.check_box :enable_starttls_auto, data: { action: 'input#submit' }, id: nil %>
    <% end %>
  </p>
  <p><%= model.openssl_verify_mode %></p>
</td>
